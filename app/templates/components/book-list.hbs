<h2>{{title}}</h2>

<ul>
{{#each books as |book|}}
    <li id={{book.id}}>
        {{book.name}} - {{book.author}}
        {{#if isDetail}}
            <br>
            {{book.desc}}
            <br>
            <button type="button" class="btn btn-sm" {{action "hideDetail"}}>Collapse</button>
        {{else}}
            <button type="button" class="btn btn-sm" {{action "showDetail"}}>Show more</button>
        {{/if}}
        
    </li>
{{/each}}
</ul>